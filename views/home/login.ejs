            background-color: rgba(255, 255, 255, 0.15);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
        }

        .admin-icon:hover {
            transform: rotate(15deg);
        }

        .admin-icon i {
            font-size: 1.6rem;
            color: white;
        }

        .card-body {
            padding: 2.5rem;
        }

        .form-label {
            font-weight: 500;
            color: var(--text-color);
            margin-bottom: 0.6rem;
        }

        .form-control {
            padding: 0.9rem 1rem;
            border: 1px solid var(--border-color);
            border-radius: 8px;
            transition: all 0.3s;
            font-size: 1rem;
        }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(26, 35, 126, 0.15);
        }

        .input-group {
            border-radius: 8px;
            overflow: hidden;
        }

        .input-group-text {
            background-color: #f8f9fa;
            border: 1px solid var(--border-color);
            color: var(--text-color);
            padding-left: 1rem;
            padding-right: 1rem;
        }

        .btn-viettech {
            background: linear-gradient(135deg, var(--primary-color) 0%, #303f9f 100%);
            color: white;
            border: none;
            padding: 0.9rem 1.5rem;
            font-weight: 500;
            letter-spacing: 0.5px;
            transition: all 0.3s;
            width: 100%;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(26, 35, 126, 0.25);
            position: relative;
            overflow: hidden;
        }

        .btn-viettech::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: all 0.6s;
        }

        .btn-viettech:hover {
            background: linear-gradient(135deg, #1b5e20 0%, #388e3c 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(26, 35, 126, 0.35);
        }

        .btn-viettech:hover::before {
            left: 100%;
        }

        .tech-footer {
            margin-top: 2.5rem;
            text-align: center;
            color: var(--text-color);
            opacity: 0.8;
            font-size: 0.9rem;
            animation: fadeInUp 1s ease-out;
        }

        .tech-footer p:last-child {
            margin-bottom: 0;
        }

        .tech-icon {
            margin-right: 0.5rem;
        }

        .dashboard-features {
            display: flex;
            flex-wrap: wrap;
            margin-top: 2rem;
            gap: 0.8rem;
            justify-content: center;
        }

        .feature-badge {
            padding: 0.6rem 1.2rem;
            background-color: rgba(26, 35, 126, 0.08);
            color: var(--primary-color);
            border-radius: 50px;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            transition: all 0.3s;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }

        .feature-badge:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
        }

        .orange-badge {
            background-color: rgba(255, 109, 0, 0.08);
            color: var(--primary-color);
        }

        .alert {
            border-radius: 8px;
            padding: 1rem 1.2rem;
            margin-top: 1.5rem;
            border: none;
            display: flex;
            align-items: center;
        }

        .alert-danger {
            background-color: rgba(211, 47, 47, 0.08);
            color: var(--danger-color);
            border-left: 4px solid var(--danger-color);
        }

        .forgot-link {
            color: var(--primary-color);
            text-decoration: none;
            font-size: 0.95rem;
            transition: all 0.3s;
            font-weight: 500;
        }

        .forgot-link:hover {
            color: var(--primary-color);
            text-decoration: underline;
        }

        .form-check-input:checked {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

        /* Animations */
        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .card-body {
                padding: 1.8rem;
            }

            .viettech-logo h1 {
                font-size: 2.3rem;
            }

            .admin-icon {
                width: 48px;
                height: 48px;
                top: 1.5rem;
                right: 1.5rem;
            }

            .admin-icon i {
                font-size: 1.4rem;
            }

            .card-header {
                padding: 1.8rem;
            }

            .card-header h2 {
                font-size: 1.5rem;
            }

            .dashboard-features {
                justify-content: flex-start;
            }
        }
    </style>
</head>

<body>

    <div class="container viettech-container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div id="loginPage" style="display: none;">
                    <div class="viettech-logo">
                        <h1>Viet<span>Tech</span></h1>
                        <p class="logo-tagline">Hệ thống quản trị cửa hàng điện tử</p>
                    </div>

                    <div class="admin-card">
                        <div class="card-header">
