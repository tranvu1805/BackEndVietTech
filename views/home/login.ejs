                        </div>
                    </div>

                    <div class="tech-footer">
                        <p>© 2025 Viettech Electronics. Tất cả quyền được bảo lưu.</p>
                        <p>Liên hệ hỗ trợ kỹ thuật: <span
                                style="color: var(--primary-color); font-weight: 500;">admin@viettech.vn</span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Xử lý sự kiện hiển thị/ẩn mật khẩu
        document.getElementById('togglePassword').addEventListener('click', function () {
            const passwordInput = document.getElementById('password');
            const icon = this.querySelector('i');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        });

        function createParticles() {
            const container = document.getElementById('particles-container');
            const particleCount = 50;

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.classList.add('particle');

                // Vị trí ngẫu nhiên
                const size = Math.random() * 4 + 2;
                const x = Math.random() * 100;
                const y = 100 + Math.random() * 50;
                const delay = Math.random() * 15;

                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;
                particle.style.left = `${x}vw`;
                particle.style.opacity = Math.random() * 0.5 + 0.3;
                particle.style.animationDelay = `${delay}s`;

                container.appendChild(particle);
            }
        }

        // Cập nhật trạng thái tải
        const loadingMessages = [
            "Đang kết nối hệ thống...",
            "Đang tải dữ liệu người dùng...",
            "Đang chuẩn bị bảng điều khiển...",
            "Đang kiểm tra quyền truy cập...",
            "Hoàn tất - Chào mừng trở lại!"
        ];

        let messageIndex = 0;
        const loadingStatus = document.getElementById('loadingStatus');

        function updateLoadingMessage() {
            if (messageIndex < loadingMessages.length) {
                loadingStatus.textContent = loadingMessages[messageIndex];
                messageIndex++;

                if (messageIndex < loadingMessages.length) {
                    setTimeout(updateLoadingMessage, 750);
                }
            }
        }

        // Khởi tạo khi tải trang
        document.addEventListener('DOMContentLoaded', () => {
            createParticles();
            setTimeout(updateLoadingMessage, 500);

            // Tự động tắt splash và hiện login sau 4s
            setTimeout(() => {
                const splash = document.getElementById('splashScreen');
                const login = document.getElementById('loginPage');

                splash.style.opacity = '1';
                splash.style.transition = 'opacity 0.8s ease';
                splash.style.opacity = '0';

                setTimeout(() => {
                    splash.style.display = 'none';
                    login.style.display = 'block';
                }, 800); // chờ fade-out hoàn tất
            }, 4000); // thời gian splash
        });

        // Xử lý đăng nhập
        document.getElementById('loginForm').addEventListener('submit', function (event) {
            event.preventDefault();

            const email = document.getElementById('email').value.trim();
            const password = document.getElementById('password').value.trim();
            const errorMessageBox = document.getElementById('errorMessage');
            const errorText = document.getElementById('errorText');

            // Reset lỗi
            errorMessageBox.style.display = 'none';
            errorText.textContent = '';

            // Custom validate
            if (!email) {
                errorMessageBox.style.display = 'block';
                errorText.textContent = 'Vui lòng nhập tên đăng nhập.';
                return;
            }

            if (!password) {
                errorMessageBox.style.display = 'block';
                errorText.textContent = 'Vui lòng nhập mật khẩu.';
                return;
            }

            // Xử lý loading
            const loginButton = document.querySelector('.btn-viettech');
            const originalText = loginButton.innerHTML;
            loginButton.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Đang xử lý...';
            loginButton.disabled = true;

            // Gửi yêu cầu đăng nhập
            fetch('/login', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    email,
                    password,
                    remember: document.getElementById('rememberMe').checked
                }),
            })
                .then(response => response.json())
                .then(data => {
                    loginButton.innerHTML = originalText;
                    loginButton.disabled = false;

                    if (data.status === "error") {
                        errorMessageBox.style.display = 'block';
                        errorText.textContent = data.message;
                    } else {
                        localStorage.setItem('accessToken', data.result.metadata.tokens.accessToken);
                        localStorage.setItem('userId', data.result.metadata.account._id);
                        localStorage.setItem('refreshToken', data.result.metadata.tokens.refreshToken);
                        localStorage.setItem('role', data.result.metadata.account.role);
                        localStorage.setItem('full_name', data.result.metadata.account.full_name);
                        localStorage.setItem('account', JSON.stringify(data.result.metadata.account));

                        window.location.href = data.redirectUrl;
                    }
                })
                .catch(error => {
                    loginButton.innerHTML = originalText;
                    loginButton.disabled = false;
                    errorMessageBox.style.display = 'block';
                    errorText.textContent = 'Lỗi kết nối máy chủ. Vui lòng thử lại sau.';
                    console.error('Error:', error);
                });
        });

