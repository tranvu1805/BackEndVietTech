<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <title>Tạo Bài Viết Mới</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="/uploads/mini_logo.ico" type="image/x-icon">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- CKEditor -->
    <script src="https://cdn.tiny.cloud/1/z3uhaa6g0x731hrlxvo422yx5ohw6mc6xfgfiroi5at4kesl/tinymce/6/tinymce.min.js"
        referrerpolicy="origin"></script>



    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary-color: #4a6bff;
            --secondary-color: #6c757d;
            --success-color: #28a745;
            --background-color: #f8f9fa;
            --card-bg: #ffffff;
            --text-color: #212529;
            --border-color: #dee2e6;
            --hover-color: #eaefff;
            --shadow-sm: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            --shadow-md: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
            --border-radius: 12px;
            --transition-speed: 0.3s;
        }

        body {
            background-color: var(--background-color);
            font-family: 'Roboto', sans-serif;
            color: var(--text-color);
            line-height: 1.6;
        }

        .form-container {
            background: var(--card-bg);
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-md);
            padding: 30px;
            margin-bottom: 40px;
            transition: transform var(--transition-speed), box-shadow var(--transition-speed);
        }

        .form-container:hover {
            transform: translateY(-3px);
            box-shadow: 0 0.75rem 1.5rem rgba(0, 0, 0, 0.12);
        }

        .form-header {
            border-bottom: 1px solid var(--border-color);
            margin-bottom: 25px;
            padding-bottom: 15px;
        }

        .form-header h3 {
            font-weight: 600;
            color: var(--primary-color);
        }

        .form-label {
            font-weight: 500;
            margin-bottom: 8px;
            font-size: 0.95rem;
        }

        .form-control,
        .form-select {
            border-radius: 8px;
            padding: 12px 15px;
            border: 1px solid var(--border-color);
            transition: all var(--transition-speed);
        }

        .form-control:focus,
        .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(74, 107, 255, 0.15);
        }

        .btn {
            border-radius: 8px;
            padding: 10px 20px;
            font-weight: 500;
            transition: all var(--transition-speed);
        }

        .btn-outline-secondary {
            border-color: var(--secondary-color);
            color: var(--secondary-color);
        }

        .btn-outline-secondary:hover {
            background-color: var(--secondary-color);
            color: white;
        }

        .btn-success {
            background-color: var(--success-color);
            border-color: var(--success-color);
            padding: 10px 25px;
        }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
            transform: translateY(-2px);
            box-shadow: var(--shadow-sm);
        }

        .input-group {
            position: relative;
        }

        .input-icon {
            position: absolute;
            top: 50%;
            left: 15px;
            transform: translateY(-50%);
            color: var(--secondary-color);
            z-index: 10;
        }

        .input-with-icon {
            padding-left: 40px;
        }

        .status-badge {
            display: inline-block;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            margin-right: 5px;
        }

        .badge-draft {
            background-color: var(--secondary-color);
        }

        .badge-publish {
            background-color: var(--success-color);
        }

        /* Custom select styling */
        .status-select-container {
            position: relative;
        }

        .custom-status-select {
            width: 100%;
            border-radius: 8px;
            padding: 12px 15px 12px 40px;
            appearance: none;
            background-color: white;
            border: 1px solid var(--border-color);
            cursor: pointer;
        }

        .status-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            z-index: 1;
            pointer-events: none;
        }

        .arrow-icon {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            pointer-events: none;
        }

        /* Page title animation */
        .page-title {
            position: relative;
            display: inline-block;
        }

        .page-title::after {
            content: '';
            position: absolute;
            width: 30%;
            height: 3px;
            background-color: var(--primary-color);
            bottom: -5px;
            left: 0;
            transition: width 0.3s ease;
        }

        .page-title:hover::after {
            width: 100%;
        }

        /* Help tooltip */
        .help-tooltip {
            display: inline-block;
            position: relative;
            margin-left: 8px;
            color: var(--secondary-color);
            cursor: pointer;
        }

        .tooltip-text {
            visibility: hidden;
            width: 200px;
            background-color: #333;
            color: #fff;
            text-align: center;
            border-radius: 6px;
            padding: 5px;
            position: absolute;
            z-index: 1;
            bottom: 125%;
            left: 50%;
            margin-left: -100px;
            opacity: 0;
            transition: opacity 0.3s;
            font-size: 0.8rem;
        }

        .help-tooltip:hover .tooltip-text {
            visibility: visible;
            opacity: 1;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .form-container {
                padding: 20px;
            }

            .btn {
                padding: 8px 16px;
            }
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <div class="form-container">
            <div class="form-header d-flex justify-content-between align-items-center">
                <!-- Đầu file -->
                <h3 class="mb-0 page-title">
                    <i class="fas fa-pen-nib me-2 text-primary"></i>
                    <%= isEdit ? "Chỉnh sửa bài viết" : "Tạo bài viết mới" %>
                </h3>

                <a href="/v1/api/admin/posts/list" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Quay lại
                </a>
            </div>

            <form id="postForm">
                <input type="hidden" id="postId" value="<%= postModel?._id || '' %>">

                <!-- Tiêu đề -->
                <div class="mb-4">
                    <label for="title" class="form-label">
                        Tiêu đề bài viết
                        <span class="help-tooltip">
                            <i class="fas fa-question-circle"></i>
                            <span class="tooltip-text">Tiêu đề nên ngắn gọn và hấp dẫn</span>
                        </span>
                    </label>
                    <div class="input-group">
                        <i class="fas fa-heading input-icon"></i>
                        <input type="text" class="form-control input-with-icon" id="title" name="title" required
                            value="<%= postModel?.title || '' %>" placeholder="Nhập tiêu đề hấp dẫn...">

                    </div>
                </div>

                <!-- Nội dung -->
                <div class="mb-4">
                    <label for="content" class="form-label">
                        Nội dung bài viết
                        <span class="help-tooltip">
                            <i class="fas fa-question-circle"></i>
                            <span class="tooltip-text">Sử dụng trình soạn thảo để định dạng nội dung</span>
                        </span>
                    </label>
                    <textarea id="content" name="content" class="form-control" rows="10" required>
                        <%= postModel?.content || '' %>
                      </textarea>
                </div>

                <!-- Trạng thái -->
                <div class="mb-4">
                    <label for="status" class="form-label">Trạng thái</label>
                    <div class="status-select-container">
                        <i class="fas fa-toggle-on status-icon text-secondary"></i>
                        <select class="custom-status-select" id="status" name="status">
                            <option value="draft" <%=postModel?.status==='draft' ? 'selected' : '' %>>Bản nháp</option>
                            <option value="publish" <%=postModel?.status==='publish' ? 'selected' : '' %>>Đăng ngay</option>

                        </select>
                        <i class="fas fa-chevron-down arrow-icon text-secondary"></i>
                    </div>
                </div>
                <input type="hidden" id="statusInput" name="status" value="draft">

                <!-- Submit -->
                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <button type="button" class="btn btn-outline-secondary me-2" id="btnSaveDraft">
                        <i class="fas fa-save me-1"></i> Lưu nháp
                    </button>
                    <button type="button" class="btn btn-success" id="btnPublish">
                        <i class="fas fa-paper-plane me-1"></i> Tạo bài viết
                    </button>
                </div>

            </form>
        </div>
    </div>

    <!-- CKEditor init -->
    <script>
        tinymce.init({
            selector: '#content',
            height: 500,
            plugins: [
                'advlist', 'autolink', 'lists', 'link', 'image', 'charmap', 'preview', 'anchor',
                'searchreplace', 'visualblocks', 'code', 'fullscreen',
                'insertdatetime', 'media', 'table', 'code', 'help', 'wordcount', 'emoticons'
            ],
            toolbar: 'undo redo | blocks | bold italic underline forecolor backcolor | ' +
                'alignleft aligncenter alignright alignjustify | ' +
                'bullist numlist outdent indent | image media link | ' +
                'emoticons | removeformat | fullscreen preview code | help',

            menubar: 'file edit view insert format tools table help',
            image_caption: true,
            automatic_uploads: true,
            file_picker_types: 'image media',
            file_picker_callback: function (callback, value, meta) {
                if (meta.filetype === 'image') {
                    const input = document.createElement('input');
                    input.setAttribute('type', 'file');
                    input.setAttribute('accept', 'image/*');

                    input.onchange = function () {
                        const file = this.files[0];
                        const reader = new FileReader();

                        reader.onload = function () {
                            const id = 'blobid' + (new Date()).getTime();
                            const blobCache = tinymce.activeEditor.editorUpload.blobCache;
                            const base64 = reader.result.split(',')[1];
                            const blobInfo = blobCache.create(id, file, base64);
                            blobCache.add(blobInfo);

                            callback(blobInfo.blobUri(), { title: file.name });
                        };
                        reader.readAsDataURL(file);
                    };

                    input.click();
                }
            },
            content_style: 'body { font-family: Roboto, sans-serif; font-size: 16px; line-height: 1.6; }'
        });

        const btnDraft = document.getElementById('btnSaveDraft');
        const btnPublish = document.getElementById('btnPublish');
        const statusInput = document.getElementById('statusInput');
        const form = document.getElementById('postForm');

        btnDraft.addEventListener("click", async () => {
            await sendPost("draft");
        });

        btnPublish.addEventListener("click", async () => {
            await sendPost("publish");
        });

        async function sendPost(status) {
            const title = document.getElementById("title").value.trim();
            const content = tinymce.get("content").getContent();
            const postId = document.getElementById("postId")?.value;
            const token = localStorage.getItem("accessToken");
            const clientId = localStorage.getItem("userId");

            if (!title || !content) {
                alert("Vui lòng nhập đầy đủ tiêu đề và nội dung.");
                return;
            }

            const payload = { title, content, status, account_id: clientId };
            const endpoint = postId ? `/v1/api/post/${postId}` : `/v1/api/post`;
            const method = postId ? "PUT" : "POST";

            try {
                btnPublish.disabled = true;
                btnPublish.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i> Đang gửi...';

                const response = await fetch(endpoint, {
                    method,
                    headers: {
                        "Content-Type": "application/json",
                        "Authorization": token,
                        "x-client-id": clientId,
                        "x-api-key": "your-api-key"
                    },
                    body: JSON.stringify(payload)
                });

                const data = await response.json();
                if (response.ok) {
                    alert(postId ? "Cập nhật thành công!" : "Tạo bài viết thành công!");
                    window.location.href = "/v1/api/admin/posts/list";
                } else {
                    alert("Lỗi: " + data.message);
                }
            } catch (err) {
                console.error(err);
                alert("Có lỗi xảy ra.");
            } finally {
                btnPublish.disabled = false;
                btnPublish.innerHTML = '<i class="fas fa-paper-plane me-1"></i> Gửi bài viết';
            }
        }




        // Thay đổi icon trạng thái
        document.getElementById('status').addEventListener('change', function () {
            const statusIcon = document.querySelector('.status-icon');
            if (this.value === 'publish') {
                statusIcon.classList.remove('fa-toggle-on', 'text-secondary');
                statusIcon.classList.add('fa-toggle-on', 'text-success');
            } else {
                statusIcon.classList.remove('fa-toggle-on', 'text-success');
                statusIcon.classList.add('fa-toggle-on', 'text-secondary');
            }
        });
    </script>
</body>

</html>