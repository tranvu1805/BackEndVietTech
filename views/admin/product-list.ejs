<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin - Quản lý Sản phẩm</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Thêm màu sắc và hiệu ứng cho các nút */
        .btn-custom {
            background-color: #007bff;
            color: white;
        }
        .btn-custom:hover {
            background-color: #0056b3;
        }

        .table th {
            background-color: #f8f9fa;
        }

        .table-hover tbody tr:hover {
            background-color: #f1f1f1;
        }

        .container {
            max-width: 1200px;
        }
        
        .page-header {
            /* border-bottom: 2px solid #007bff; */
            padding-bottom: 15px;
        }

        .pagination {
            justify-content: center;
        }

        /* Style cho cột thuộc tính */
        .product-attributes th, .product-attributes td {
            text-align: left;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="page-header">
            <h2>Danh sách Sản phẩm</h2>
        </div>
        
        <a href="/admin/create" class="btn btn-success mb-3">Thêm Sản phẩm</a>

        <!-- Bảng sản phẩm -->
        <table class="table table-bordered table-hover">
            <thead class="thead-light">
                <tr>
                    <th>ID</th>
                    <th>Tên Sản phẩm</th>
                    <th>Giá</th>
                    <th>Kho hàng</th>
                    <th>Thuộc tính</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                <tr>
                    <td><%= product._id %></td>
                    <td><%= product.product_name %></td>
                    <td><%= product.product_price %> VNĐ</td>
                    <td><%= product.product_stock %></td>
                    <td>
                        <!-- Hiển thị tất cả các thuộc tính -->
                        <ul>
                            <li><strong>Thời gian sử dụng pin:</strong> <%= product.product_attributes.battery_life %></li>
                            <li><strong>Chất lượng camera:</strong> <%= product.product_attributes.camera_quality %></li>
                            <li><strong>Kích thước màn hình:</strong> <%= product.product_attributes.screen_size %></li>
                            <li><strong>Dung lượng bộ nhớ:</strong> <%= product.product_attributes.storage_capacity %></li>
                            <li><strong>RAM:</strong> <%= product.product_attributes.ram %></li>
                            <li><strong>Hệ điều hành:</strong> <%= product.product_attributes.operating_system %></li>
                            <li><strong>Chipset:</strong> <%= product.product_attributes.chipset %></li>
                        </ul>
                    </td>
                    <td>
                        <a href="/admin/<%= product._id %>/edit" class="btn btn-warning btn-custom btn-sm">Sửa</a>
                        <a href="/admin/<%= product._id %>/delete" class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>

        <!-- Phân trang (nếu có nhiều sản phẩm) -->
        <div class="d-flex justify-content-center">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item active">
                    <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">2</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">3</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
