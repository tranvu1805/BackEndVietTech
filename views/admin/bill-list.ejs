    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const accessToken = localStorage.getItem('accessToken');
        const userId = localStorage.getItem('userId');
        const apiKey = 'c244dcd1532c91ab98a1c028e4f24f81457cdb2ac83e2ca422d36046fec84233589a4b51eda05e24d8871f73653708e3b13cf6dd1415a6330eaf6707217ef683'

        document.getElementById('exportBillsButton').addEventListener('click', function () {
            // Gửi yêu cầu GET đến server để xuất file Excel
            fetch('/v1/api/admin/bills/export', {
                method: 'GET',
                headers: {
                    authorization: accessToken,
                    'x-client-id': userId,
                    'x-api-key': apiKey
                }
            })
                .then(response => {
                    if (response.ok) {
                        // Tải file Excel về
                        return response.blob();  // Lấy nội dung dưới dạng Blob (dữ liệu file)
                    }
                    throw new Error('Error exporting bills');
                })
                .then(blob => {
                    // Tạo URL cho file Blob
                    const link = document.createElement('a');
                    link.href = URL.createObjectURL(blob);  // Tạo URL cho file Blob
                    link.download = 'all_bills.xlsx';  // Đặt tên file khi tải về
                    link.click();  // Tự động click vào link để tải file
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Có lỗi khi xuất file.');
                });
        });

        function openEditModal(bill) {
            document.getElementById('edit_bill_id').value = bill._id;
            document.getElementById('edit_receiver_name').value = bill.receiver_name;
            document.getElementById('edit_phone_number').value = bill.phone_number;
            document.getElementById('edit_address').value = bill.address;
            document.getElementById('edit_payment_method').value = bill.payment_method;

            // Build lại option cho trạng thái, ẩn trạng thái hiện tại
            const statusSelect = document.getElementById('edit_status');
            const statuses = [
                { value: 'pending', label: 'Đang xử lý' },
                { value: 'active', label: 'Đang vận chuyển' },
                { value: 'completed', label: 'Hoàn thành' },
                { value: 'cancelled', label: 'Bị hủy' }
            ];

            const nextStatusMap = {
                pending: ['active', 'cancelled'],
                active: ['completed', 'cancelled'],
                completed: [],
                cancelled: []
            };

            const currentStatus = bill.status;
            const validNextStatuses = nextStatusMap[currentStatus] || [];

            // Nếu không có trạng thái kế tiếp => disable dropdown
            if (validNextStatuses.length === 0) {
                statusSelect.innerHTML = `<option selected disabled>Không thể thay đổi</option>`;
                statusSelect.disabled = true;
            } else {
                statusSelect.disabled = false;
                statusSelect.innerHTML = validNextStatuses
                    .map(s => {
                        const labelMap = {
                            pending: 'Đang xử lý',
                            active: 'Đang vận chuyển',
                            completed: 'Hoàn thành',
                            cancelled: 'Bị hủy'
                        };
                        return `<option value="${s}">${labelMap[s]}</option>`;
                    })
                    .join('');
            }



            new bootstrap.Modal(document.getElementById('editBillModal')).show();
        }


        // Gửi form chỉnh sửa
        document.getElementById('editBillForm').addEventListener('submit', function (e) {
            e.preventDefault();

            const billId = document.getElementById('edit_bill_id').value;
            const status = document.getElementById('edit_status').value;

            console.log('billId:', billId);
            console.log('status:', status);
            
            


            fetch(`/v1/api/bill/${billId}/status`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                    authorization: accessToken,
                    'x-client-id': userId,
                    'x-api-key': apiKey
                },
                body: JSON.stringify({ status })
            })
                .then(response => response.json())
                .then(data => {
                    console.log('data:', data);

                    if (data.statusCode === 200) {
                        alert('Cập nhật trạng thái thành công!');
                        location.reload();
                    } else {
                        alert('Có lỗi xảy ra khi cập nhật trạng thái.');
                    }
                })
                .catch(error => {
                    console.error('Lỗi:', error);
                    alert('Lỗi không xác định.');
                });
        });


        function handleEditFromButton(btn) {
            const bill = JSON.parse(btn.getAttribute('data-bill'));
            openEditModal(bill);
        }

        document.querySelectorAll('[data-bs-toggle="collapse"]').forEach(button => {
            button.addEventListener('click', async () => {
                const targetId = button.getAttribute('data-bs-target');
                const billId = targetId.replace('#details', '');
                const logList = document.getElementById(`log-list-${billId}`);

                // Nếu đã có log thì không cần fetch lại
                if (logList.getAttribute('data-loaded')) return;

                try {
                    const res = await fetch(`/v1/api/log/${billId}/logs`, {
                        headers: {
                            authorization: accessToken,
                            'x-client-id': userId,
                            'x-api-key': apiKey
                        }
                    });
                    const data = await res.json();
                    const logs = data.metadata || [];
                    console.log('logs:', logs);

                    if (!Array.isArray(logs)) {
                        logList.innerHTML = '<li class="list-group-item text-danger">Không có dữ liệu log.</li>';
                        return;
                    }

                    if (logs.length === 0) {
                        logList.innerHTML = '<li class="list-group-item text-muted">Chưa có thay đổi trạng thái.</li>';
                    } else {
                        logs.forEach(log => {
                            console.log('log:', log.changed_by);

                            const li = document.createElement('li');
                            li.classList.add('list-group-item', 'log-entry');

                            const from = log.before?.status || '---';
                            const to = log.after?.status || '---';
                            const note = log.note || 'Không có ghi chú';
                            const user = log.changed_by?.email || 'Không xác định';
                            const time = new Date(log.createdAt).toLocaleString('vi-VN');

                            li.innerHTML = `
        <strong>${from}</strong> ➜ <strong>${to}</strong>
        <div class="log-meta">Bởi <span>${user}</span> lúc <span>${time}</span></div>
        <div class="log-note">${note}</div>
    `;

                            logList.appendChild(li);
                        });

                    }

                    logList.setAttribute('data-loaded', 'true');
                } catch (error) {
                    console.error('Lỗi lấy log:', error);
                    logList.innerHTML = '<li class="list-group-item text-danger">Lỗi tải lịch sử.</li>';
                }
            });
        });



    </script>
