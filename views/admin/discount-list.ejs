<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Quản Trị Hệ Thống - Quản Lý Khuyến Mãi</title>
    <link rel="icon" href="/uploads/mini_logo.ico" type="image/png">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet 22" href="/css/style.css">
</head>

<body>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <%- include('partials/header') %>

                <!-- Main Content -->
                <div class="col-md-10 col-lg-10 ms-auto main-content">
                    <!-- Top Navbar -->
                    <nav class="top-navbar">
                        <h4 class="mb-0">Quản lý Khuyến Mãi</h4>
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <button class="notification-btn" type="button">
                                    <i class="fas fa-bell"></i>
                                    <span class="notification-badge">3</span>
                                </button>
                            </div>
                            <div class="dropdown">
                                <button class="user-dropdown border-0 d-flex align-items-center" type="button"
                                    id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img id="user-avatar" src="https://via.placeholder.com/40?text=U" alt="Avatar"
                                        class="rounded-circle me-2" width="36" height="36" style="object-fit: cover;">
                                    <span class="d-none d-md-inline" id="user-fullname">Admin</span>
                                    <i class="fas fa-chevron-down ms-2 small"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i> Hồ sơ</a>
                                    </li>
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i> Cài
                                            đặt</a></li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li><a class="dropdown-item" href="#" onclick="logout()"><i
                                                class="fas fa-sign-out-alt me-2"></i> Đăng xuất</a></li>
                                </ul>
                            </div>
                        </div>
                    </nav>

                    <!-- Page Header -->
                    <div class="page-header">
                        <a href="/v1/api/admin/discounts/create" class="btn btn-success">
                            <i class="fas fa-plus me-1"></i> Thêm khuyến mãi mới
                        </a>
                    </div>

                    <!-- Search and Filter -->
                    <div class="row mb-4 align-items-end g-3">
                        <!-- Tìm kiếm -->
                        <div class="col-md-4">
                            <label for="searchName" class="form-label">Tìm kiếm khuyến mãi</label>
                            <div class="input-group">
                                <input type="text" id="searchName" class="form-control" placeholder="Tên khuyến mãi"
                                    value="<%= query?.search || '' %>">
                                <button class="btn btn-outline-primary" id="searchButton"><i
                                        class="fas fa-search"></i></button>
                            </div>
                        </div>

                        <!-- Loại khuyến mãi -->
                        <div class="col-md-2">
                            <label for="filterType" class="form-label">Loại khuyến mãi</label>
                            <select class="form-select" id="filterType">
                                <option value="" <%=!query?.type ? 'selected' : '' %>>Tất cả</option>
                                <option value="percentage" <%=query?.type==='percentage' ? 'selected' : '' %>>Phần trăm
                                </option>
                                <option value="fixed" <%=query?.type==='fixed' ? 'selected' : '' %>>Số tiền cố định
                                </option>
                                <option value="shipping" <%=query?.type==='shipping' ? 'selected' : '' %>>Miễn phí vận
                                    chuyển</option>
                            </select>
                        </div>

                        <!-- Trạng thái -->
                        <div class="col-md-2">
                            <label for="filterStatus" class="form-label">Trạng thái</label>
                            <select class="form-select" id="filterStatus">
                                <option value="" <%=!query?.status ? 'selected' : '' %>>Tất cả</option>
                                <option value="active" <%=query?.status==='active' ? 'selected' : '' %>>Đang hoạt động
                                </option>
                                <option value="scheduled" <%=query?.status==='scheduled' ? 'selected' : '' %>>Đã lên
                                    lịch</option>
                                <option value="expired" <%=query?.status==='expired' ? 'selected' : '' %>>Đã hết hạn
                                </option>
                                <option value="draft" <%=query?.status==='draft' ? 'selected' : '' %>>Bản nháp</option>
                            </select>
                        </div>

                        <!-- Sắp xếp -->
                        <div class="col-md-2">
                            <label for="sortOption" class="form-label">Sắp xếp</label>
                            <select class="form-select" id="sortOption">
                                <option value="">Mặc định</option>
                                <option value="discount_asc" <%=query?.sort==='discount_asc' ? 'selected' : '' %>>Giá
                                    trị tăng dần</option>
                                <option value="discount_desc" <%=query?.sort==='discount_desc' ? 'selected' : '' %>>Giá
                                    trị giảm dần</option>
                                <option value="start_date_asc" <%=query?.sort==='start_date_asc' ? 'selected' : '' %>
                                    >Ngày bắt đầu (cũ đến mới)</option>
                                <option value="start_date_desc" <%=query?.sort==='start_date_desc' ? 'selected' : '' %>
                                    >Ngày bắt đầu (mới đến cũ)</option>
                                <option value="end_date_asc" <%=query?.sort==='end_date_asc' ? 'selected' : '' %>>Ngày
                                    kết thúc (gần đến xa)</option>
                                <option value="name_asc" <%=query?.sort==='name_asc' ? 'selected' : '' %>>Tên A-Z
                                </option>
                                <option value="name_desc" <%=query?.sort==='name_desc' ? 'selected' : '' %>>Tên Z-A
                                </option>
                            </select>
                        </div>

                        <!-- Nút hành động -->
                        <div class="col-md-2 text-end">
                            <label class="form-label d-block invisible">Hành động</label>
                            <div class="btn-group w-100">
                                <button class="btn btn-outline-primary" id="applyFilter">
                                    <i class="fas fa-filter me-1"></i> Lọc
                                </button>
                                <button class="btn btn-outline-success" id="exportDiscountsButton">
                                    <i class="fas fa-download me-1"></i> Xuất
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Discounts Table -->
                    <div class="card">
                        <div class="card-body p-0">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th class="ps-3">ID</th>
                                        <th>Tên khuyến mãi</th>
                                        <th>Mã giảm giá</th>
                                        <th>Giảm giá</th>
                                        <th>Thời gian</th>
                                        <th>Trạng thái</th>
                                        <th>Thông tin chi tiết</th>
                                        <th class="text-end pe-3">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% discounts.forEach(discount=> { %>
                                        <tr>
                                            <td class="ps-3">
                                                <small class="text-muted" title="<%= discount._id.toString() %>">
                                                    <%= discount._id.toString().slice(0, 8) %>...
                                                </small>
                                            </td>

                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="discount-icon me-2"
                                                        style="width: 40px; height: 40px; background-color: #f1f1f1; border-radius: 4px; display: flex; align-items: center; justify-content: center;">
                                                        <i class="fas fa-tag text-primary"></i>
                                                    </div>
                                                    <div>
                                                        <%= discount.name %>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <% if (discount.code) { %>
                                                    <span class="badge bg-light text-dark">
                                                        <%= discount.code %>
                                                    </span>
                                                    <% } else { %>
                                                        <span class="text-muted">Tự động áp dụng</span>
                                                        <% } %>
                                            </td>
                                            <td>
                                                <% if (discount.discountType==='percentage' ) { %>
                                                    <span class="text-success fw-bold">
                                                        <%= discount.discountValue %>%
                                                    </span>
                                                    <% } else if (discount.discountType==='fixed' ) { %>
                                                        <span class="text-danger fw-bold">
                                                            <%= discount.discountValue.toLocaleString() %> ₫
                                                        </span>
                                                        <% } else { %>
                                                            <span class="badge bg-info text-white">Miễn phí vận
                                                                chuyển</span>
                                                            <% } %>
                                            </td>
                                            <td>
                                                <small class="d-block">
                                                    <i class="far fa-calendar-alt me-1 text-success"></i>
                                                    <%= new Date(discount.startDate).toLocaleDateString('vi-VN') %>
                                                </small>
                                                <small class="d-block">
                                                    <i class="far fa-calendar-alt me-1 text-danger"></i>
                                                    <%= new Date(discount.endDate).toLocaleDateString('vi-VN') %>
                                                </small>
                                            </td>
                                            <td>
                                                <% if (discount.isDraft) { %>
                                                    <span class="badge bg-warning text-dark">Bản nháp</span>
                                                    <% } else { %>
                                                        <% const now=new Date(); %>
                                                            <% if (now < new Date(discount.startDate)) { %>
                                                                <span class="badge bg-info">Đã lên lịch</span>
                                                                <% } else if (now> new Date(discount.endDate)) { %>
                                                                    <span class="badge bg-secondary">Đã hết hạn</span>
                                                                    <% } else { %>
                                                                        <span class="badge bg-success">Đang hoạt
                                                                            động</span>
                                                                        <% } %>
                                                                            <% } %>
                                            </td>

                                            <td>
                                                <button class="btn btn-sm btn-outline-secondary" type="button"
                                                    data-bs-toggle="collapse"
                                                    data-bs-target="#details<%= discount._id %>" aria-expanded="false">
                                                    <i class="fas fa-info-circle me-1"></i> Chi tiết
                                                </button>
                                            </td>
                                            <td class="text-end pe-3">
                                                <div class="action-buttons">
                                                    <a href="/v1/api/admin/discounts/edit/<%= discount._id %>"
                                                        class="btn btn-sm btn-warning me-1">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <div class="form-check form-switch d-inline-block">
                                                        <label class="switch-toggle"
                                                            title="<%= discount.isDraft ? 'Bản nháp - click để kích hoạt' : 'Đang hoạt động - click để nháp' %>">
                                                            <input type="checkbox" <%=!discount.isDraft ? 'checked' : ''
                                                                %>
                                                            onchange="toggleStatus('<%= discount._id %>', <%=
                                                                    discount.isDraft %>)">
                                                                    <span class="switch-slider"></span>
                                                        </label>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>

                                        <!-- Details Row -->
                                        <tr class="collapse" id="details<%= discount._id %>">
                                            <td colspan="8" class="p-0">
                                                <div class="discount-details p-3">
                                                    <div class="row g-4">
                                                        <!-- General Info Column -->
                                                        <div class="col-md-4">
                                                            <div class="discount-general">
                                                                <h6 class="mb-3"><i
                                                                        class="fas fa-info-circle me-2"></i>Thông tin
                                                                    chung</h6>
                                                                <div class="card border-0 shadow-sm">
                                                                    <div class="card-body p-3">
                                                                        <ul class="list-unstyled mb-0">
                                                                            <li class="mb-2">
                                                                                <strong>Mô tả:</strong>
                                                                                <p class="text-muted mb-2">
                                                                                    <%= discount.description
                                                                                        || 'Không có mô tả' %>
                                                                                </p>
                                                                            </li>
                                                                            <li class="mb-2">
                                                                                <strong>Tổng số lượt sử dụng:</strong>
                                                                                <span
                                                                                    class="badge bg-light text-dark ms-1">
                                                                                    <%= discount.usageCount || 0 %> lần
                                                                                </span>
                                                                            </li>
                                                                            <li class="mb-2">
                                                                                <strong>Giới hạn sử dụng:</strong>
                                                                                <span class="ms-1">
                                                                                    <%= discount.usageLimit ?
                                                                                        discount.usageLimit + ' lần'
                                                                                        : 'Không giới hạn' %>
                                                                                </span>
                                                                            </li>
                                                                            <li>
                                                                                <strong>Người tạo:</strong>
                                                                                <span class="ms-1">
                                                                                    <%= discount.createdBy || 'Admin' %>
                                                                                </span>
                                                                            </li>
                                                                        </ul>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <!-- Conditions Column -->
                                                        <div class="col-md-4">
                                                            <div class="discount-conditions">
                                                                <h6 class="mb-3"><i
                                                                        class="fas fa-check-circle me-2"></i>Điều kiện
                                                                    áp dụng</h6>
                                                                <div class="card border-0 shadow-sm">
                                                                    <div class="card-body p-3">
                                                                        <ul class="list-unstyled mb-0">
                                                                            <li class="mb-2">
                                                                                <strong>Giá trị đơn tối thiểu:</strong>
                                                                                <span class="ms-1">
                                                                                    <%= discount.minOrderValue ?
                                                                                        discount.minOrderValue.toLocaleString()
                                                                                        + ' ₫' : 'Không giới hạn' %>
                                                                                </span>
                                                                            </li>
                                                                            <li class="mb-2">
                                                                                <strong>Giá trị giảm tối đa:</strong>
                                                                                <span class="ms-1">
                                                                                    <%= discount.maxDiscountAmount ?
                                                                                        discount.maxDiscountAmount.toLocaleString()
                                                                                        + ' ₫' : 'Không giới hạn' %>
                                                                                </span>
                                                                            </li>
                                                                            <li class="mb-2">
                                                                                <strong>Áp dụng cho khách hàng:</strong>
                                                                                <span class="ms-1">
                                                                                    <%= discount.customerType
                                                                                        || 'Tất cả khách hàng' %>
                                                                                </span>
                                                                            </li>
                                                                            <li>
                                                                                <strong>Phạm vi áp dụng:</strong>
                                                                                <span class="ms-1">
                                                                                    <%= discount.applyTo
                                                                                        || 'Toàn bộ sản phẩm' %>
                                                                                </span>
                                                                            </li>
                                                                        </ul>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <!-- Applied Products/Categories -->
                                                        <div class="col-md-4">
                                                            <div class="discount-targets">
                                                                <h6 class="mb-3"><i class="fas fa-tags me-2"></i>Áp dụng
                                                                    cho</h6>
                                                                <% if (!discount.appliedProducts ||
                                                                    discount.appliedProducts.length===0) { %>
                                                                    <div class="card border-0 shadow-sm">
                                                                        <div class="card-body p-3">
                                                                            <% if
                                                                                (discount.applyTo==='specific_products'
                                                                                ) { %>
                                                                                <button
                                                                                    class="btn btn-sm btn-outline-info w-100"
                                                                                    data-bs-toggle="modal"
                                                                                    data-bs-target="#productsModal<%= discount._id %>">
                                                                                    <i class="fas fa-boxes me-1"></i>
                                                                                    Xem danh sách sản phẩm
                                                                                </button>
                                                                                <% } else if
                                                                                    (discount.applyTo==='specific_categories'
                                                                                    ) { %>
                                                                                    <button
                                                                                        class="btn btn-sm btn-outline-info w-100"
                                                                                        data-bs-toggle="modal"
                                                                                        data-bs-target="#categoriesModal<%= discount._id %>">
                                                                                        <i
                                                                                            class="fas fa-layer-group me-1"></i>
                                                                                        Xem danh mục áp dụng
                                                                                    </button>
                                                                                    <% } else { %>
                                                                                        <p class="text-muted mb-0">Áp
                                                                                            dụng cho tất cả sản phẩm</p>
                                                                                        <% } %>
                                                                        </div>
                                                                    </div>
                                                                    <% } else { %>
                                                                        <div class="card border-0 shadow-sm">
                                                                            <div class="card-body p-3">
                                                                                <button
                                                                                    class="btn btn-sm btn-outline-info w-100"
                                                                                    data-bs-toggle="modal"
                                                                                    data-bs-target="#productsModal<%= discount._id %>">
                                                                                    <i class="fas fa-boxes me-1"></i>
                                                                                    Xem danh sách sản phẩm (<%=
                                                                                        discount.appliedProducts.length
                                                                                        %>)
                                                                                </button>
                                                                            </div>
                                                                        </div>
                                                                        <% } %>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>

                                        <!-- Applied Products Modal -->

                                        <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>



                    <% discounts.forEach(discount=> { %>

                        <!-- Modal sản phẩm áp dụng -->
                        <% if ( discount.applyTo==='specific_products' || (discount.appliedProducts &&
                            discount.appliedProducts.length> 0)
                            ) { %>
                            <div class="modal fade" id="productsModal<%= discount._id %>" tabindex="-1"
                                aria-labelledby="productsModalLabel<%= discount._id %>" aria-hidden="true">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header bg-dark text-white">
                                            <h5 class="modal-title" id="productsModalLabel<%= discount._id %>">
                                                Sản phẩm áp dụng cho "<%= discount.name %>"
                                            </h5>
                                            <button type="button" class="btn-close bg-white" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <% if (!discount.appliedProducts || discount.appliedProducts.length===0) {
                                                %>
                                                <p class="text-muted text-center py-3">Không có sản phẩm cụ
                                                    thể được áp dụng</p>
                                                <% } else { %>
                                                    <div class="table-responsive">
                                                        <table class="table table-hover table-sm">
                                                            <thead>
                                                                <tr>
                                                                    <th>ID</th>
                                                                    <th>Tên sản phẩm</th>
                                                                    <th>Giá gốc</th>
                                                                    <th>Giá sau giảm</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <% discount.appliedProducts.forEach(product=>
                                                                    { %>
                                                                    <tr>
                                                                        <td><small>
                                                                                <%= product._id.toString().slice(0, 6)
                                                                                    %>...
                                                                            </small></td>
                                                                        <td>
                                                                            <%= product.product_name %>
                                                                        </td>
                                                                        <td>
                                                                            <%= product.product_price.toLocaleString()
                                                                                %> ₫
                                                                        </td>
                                                                        <td class="text-danger fw-bold">
                                                                            <% if (discount.discountType==='percentage'
                                                                                ) { %>
                                                                                <%= (product.product_price * (1 -
                                                                                    discount.discountValue/100)).toLocaleString()
                                                                                    %> ₫
                                                                                    <% } else if
                                                                                        (discount.discountType==='fixed'
                                                                                        ) { %>
                                                                                        <%= Math.max(0,
                                                                                            product.product_price -
                                                                                            discount.discountValue).toLocaleString()
                                                                                            %> ₫
                                                                                            <% } else { %>
                                                                                                <%= product.product_price.toLocaleString()
                                                                                                    %> ₫
                                                                                                    <% } %>
                                                                        </td>
                                                                    </tr>
                                                                    <% }); %>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                    <% } %>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Đóng</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>

                                <!-- Modal danh mục áp dụng -->
                                <% if ( discount.applyTo==='specific_categories' || (discount.appliedCategories &&
                                    discount.appliedCategories.length> 0)
                                    ) { %>
                                    <div class="modal fade" id="categoriesModal<%= discount._id %>" tabindex="-1"
                                        aria-labelledby="categoriesModalLabel<%= discount._id %>" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header bg-dark text-white">
                                                    <h5 class="modal-title"
                                                        id="categoriesModalLabel<%= discount._id %>">
                                                        Danh mục áp dụng cho "<%= discount.name %>"
                                                    </h5>
                                                    <button type="button" class="btn-close bg-white"
                                                        data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <% if (!discount.appliedCategories ||
                                                        discount.appliedCategories.length===0) { %>
                                                        <p class="text-muted text-center py-3">Không có danh mục cụ
                                                            thể được áp dụng</p>
                                                        <% } else { %>
                                                            <ul class="list-group">
                                                                <% discount.appliedCategories.forEach(category=> {
                                                                    %>
                                                                    <li
                                                                        class="list-group-item d-flex justify-content-between align-items-center">
                                                                        <%= category.name %>
                                                                            <span class="badge bg-primary rounded-pill">
                                                                                <%= category.productCount || 0 %>
                                                                                    sản phẩm
                                                                            </span>
                                                                    </li>
                                                                    <% }); %>
                                                            </ul>
                                                            <% } %>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-bs-dismiss="modal">Đóng</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>

                                        <% }); %>


                                            <!-- Pagination -->
                                            <nav>
                                                <ul class="pagination justify-content-center mt-4">
                                                    <% for (let i=1; i <=totalPages; i++) { %>
                                                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                                            <a class="page-link"
                                                                href="/v1/api/admin/discounts/list?<%= new URLSearchParams({ ...query, page: i }).toString() %>">
                                                                <%= i %>
                                                            </a>
                                                        </li>
                                                        <% } %>
                                                </ul>
                                            </nav>
                                            <%- include('partials/footer') %>

                </div>
        </div>
    </div>

    <!-- Bootstrap and other scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
    <script>
        document.querySelectorAll('.nav-link').forEach(item => {
            item.addEventListener('click', function () {
                // Xóa lớp active khỏi tất cả các liên kết
                document.querySelectorAll('.nav-link').forEach(link => link.classList.remove('active'));

                // Thêm lớp active vào mục được chọn
                this.classList.add('active');
            });
        });

        document.getElementById('exportDiscountsButton').addEventListener('click', function () {
            fetch('/v1/api/admin/discounts/export', {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
                .then(response => {
                    if (response.ok) {
                        return response.blob();
                    }
                    throw new Error('Error exporting discounts')
                })
                .then(blob => {
                    const link = document.createElement('a');
                    link.href = URL.createObjectURL(blob);  // Tạo URL cho file Blob
                    link.download = 'all_discounts.xlsx';  // Đặt tên file khi tải về
                    link.click();  // Tự động click vào link để tải file
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Có lỗi khi xuất file.');
                })
        });

        async function toggleStatus(discountId, isDraft) {
            const confirmText = isDraft
                ? "Bạn muốn chuyển khuyến mãi này sang trạng thái KÍCH HOẠT?"
                : "Bạn muốn CHUYỂN SANG BẢN NHÁP khuyến mãi này?";

            if (!confirm(confirmText)) return;

            try {
                const response = await fetch(`/v1/api/admin/discounts/${discountId}/toggle-status`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const data = await response.json();

                if (data.success) {
                    alert(data.message);
                    location.reload();
                } else {
                    alert("Lỗi: " + data.message);
                }
            } catch (error) {
                console.error("Lỗi khi thay đổi trạng thái:", error);
                alert("Đã xảy ra lỗi.");
            }
        }

        document.getElementById('applyFilter').addEventListener('click', function () {
            const name = document.getElementById('searchName').value;
            const type = document.getElementById('filterType').value;
            const status = document.getElementById('filterStatus').value;
            const sort = document.getElementById('sortOption').value;

            let query = '?';

            if (name) query += `search=${encodeURIComponent(name)}&`;
            if (type) query += `type=${type}&`;
            if (status) query += `status=${status}&`;
            if (sort) query += `sort=${sort}&`;

            window.location.href = `/v1/api/admin/discounts/list${query}`;
        });

        document.getElementById('searchButton').addEventListener('click', function () {
            document.getElementById('applyFilter').click();
        });
    </script>
